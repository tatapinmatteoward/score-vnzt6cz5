---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-linkedin', url: '#' }
];
---

<footer class="bg-[#0a1a2f] text-white py-8 border-t border-[#7c3aed]">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg font-light mb-4">Â© {currentYear} ScoreStack Predictor. All rights reserved.</p>
    
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a 
          href={link.url} 
          class="text-gray-300 hover:text-[#7c3aed] transition-colors duration-300 hover:scale-110"
          aria-label={`Follow us on ${link.icon.split('-')[2]}`}
        >
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
    
    <div class="mt-6 pt-6 border-t border-gray-800">
      <p class="text-sm text-gray-400">
        Powered by futuristic technology and data analytics
      </p>
    </div>
  </div>
</footer>