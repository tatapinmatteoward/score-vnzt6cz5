---
import Layout from '../layouts/Layout.astro';

const pageTitle = "ScoreStack Predictor - Home";
const pageDescription = "Welcome to ScoreStack Predictor, your AI-powered platform for smarter football betting predictions. Dive into futuristic insights with our advanced analytics and glowing tech interface.";

const features = [
  {
    title: "Advanced AI Algorithms",
    description: "Our neural networks analyze thousands of data points, from player stats to weather conditions, for unparalleled accuracy.",
    icon: "fas fa-brain"
  },
  {
    title: "Real-Time Updates",
    description: "Get live predictions and odds adjustments as games unfold.",
    icon: "fas fa-bolt"
  },
  {
    title: "User-Friendly Interface",
    description: "Navigate our sleek, dark-themed dashboard with glowing accents for an immersive experience.",
    icon: "fas fa-desktop"
  },
  {
    title: "Proven Results",
    description: "Join thousands of users who've boosted their win rates by up to 30%.",
    icon: "fas fa-trophy"
  }
];

const steps = [
  { number: "1", title: "Select Your Match", description: "Browse upcoming fixtures and choose the game you want predictions for." },
  { number: "2", title: "View AI Insights", description: "Receive detailed analysis and predictions powered by machine learning." },
  { number: "3", title: "Place Your Bet", description: "Make informed decisions with confidence using our actionable insights." }
];

const testimonials = [
  {
    quote: "ScoreStack has transformed how I approach football betting. The predictions are incredibly accurate!",
    author: "Michael Rodriguez",
    role: "Professional Gambler"
  },
  {
    quote: "The real-time updates during matches are game-changing. I've increased my win rate by 25% since using this platform.",
    author: "Sarah Johnson",
    role: "Sports Enthusiast"
  },
  {
    quote: "As someone new to sports betting, the intuitive interface and clear insights made it easy to get started.",
    author: "David Chen",
    role: "Casual Bettor"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-[#0a1a2f] to-[#1a2a4a] py-20 lg:py-32">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_50%_50%,rgba(124,58,237,0.1)_0%,transparent_50%)]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block px-4 py-1 mb-6 bg-purple-900/50 rounded-full border border-purple-500/30">
          <span class="text-purple-300 text-sm font-medium">AI-Powered Predictions</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Smart Football Betting
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-purple-300">With AI Precision</span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto">
          Welcome to the future of football betting. ScoreStack Predictor harnesses cutting-edge AI to deliver precise, data-driven forecasts that give you the edge in every match.
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-gradient-to-r from-purple-600 to-purple-700 text-white font-semibold rounded-lg hover:from-purple-700 hover:to-purple-800 transition-all duration-300 transform hover:-translate-y-1 shadow-lg shadow-purple-500/20">
            Start Predicting Now
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-purple-500 text-purple-300 font-semibold rounded-lg hover:bg-purple-500/10 transition-all duration-300">
            View Demo
          </button>
        </div>
      </div>
      
      <div class="mt-16 max-w-5xl mx-auto">
        <div class="relative rounded-2xl overflow-hidden border border-purple-500/20 bg-gradient-to-br from-gray-900/50 to-gray-800/30 backdrop-blur-sm p-1">
          <div class="bg-gradient-to-br from-gray-900 to-black rounded-xl p-6">
            <div class="flex items-center justify-between mb-6">
              <div class="flex space-x-2">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
              </div>
              <div class="text-sm text-gray-400">Live Prediction Dashboard</div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="bg-gray-800/50 rounded-lg p-4 border border-purple-500/10">
                <div class="text-gray-400 text-sm mb-1">Match Time</div>
                <div class="text-white font-semibold">14:30 GMT</div>
              </div>
              <div class="bg-gray-800/50 rounded-lg p-4 border border-purple-500/10">
                <div class="text-gray-400 text-sm mb-1">Prediction</div>
                <div class="text-green-400 font-semibold">Home Win - 72%</div>
              </div>
              <div class="bg-gray-800/50 rounded-lg p-4 border border-purple-500/10">
                <div class="text-gray-400 text-sm mb-1">Confidence</div>
                <div class="text-purple-400 font-semibold">94%</div>
              </div>
            </div>
            
            <div class="mt-6">
              <div class="flex justify-between items-center mb-2">
                <span class="text-gray-400">Current Odds</span>
                <span class="text-white font-medium">2.45</span>
              </div>
              <div class="w-full bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-purple-500 to-purple-600 h-2 rounded-full" style="width: 65%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gradient-to-b from-[#0a1a2f] to-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Why Choose ScoreStack?</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Our cutting-edge platform combines artificial intelligence with expert analysis to provide unrivaled betting insights.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="group bg-gradient-to-br from-gray-900/50 to-gray-800/30 rounded-xl p-6 border border-purple-500/10 hover:border-purple-500/30 transition-all duration-300 hover:-translate-y-2">
            <div class="w-12 h-12 rounded-lg bg-purple-900/30 flex items-center justify-center mb-4 group-hover:bg-purple-600/30 transition-colors">
              <i class={`${feature.icon} text-purple-400 text-xl`}></i>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">{feature.title}</h3>
            <p class="text-gray-400">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="py-20 bg-gradient-to-b from-gray-900 to-[#0a1a2f]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">How It Works</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Our streamlined process ensures you get the best predictions in seconds.</p>
      </div>
      
      <div class="relative">
        <div class="hidden lg:block absolute top-0 left-1/2 transform -translate-x-1/2 h-full w-1 bg-gradient-to-b from-purple-500/30 via-purple-500/50 to-transparent"></div>
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
          {steps.map((step, index) => (
            <div key={index} class="relative">
              <div class={`flex flex-col items-center ${index === 1 ? 'lg:mt-16' : ''}`}>
                <div class="w-16 h-16 rounded-full bg-gradient-to-r from-purple-600 to-purple-700 flex items-center justify-center text-white font-bold text-xl mb-6 z-10">
                  {step.number}
                </div>
                
                <div class="bg-gradient-to-br from-gray-900/70 to-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-purple-500/10 w-full">
                  <h3 class="text-xl font-semibold text-white mb-3">{step.title}</h3>
                  <p class="text-gray-400">{step.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 bg-gradient-to-b from-[#0a1a2f] to-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">What Our Users Say</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Join thousands of satisfied customers who have transformed their betting strategy.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div key={index} class="bg-gradient-to-br from-gray-900/70 to-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-purple-500/10 hover:border-purple-500/30 transition-all duration-300">
            <div class="text-yellow-400 mb-4">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            </div>
            <p class="text-gray-300 italic mb-6">"{testimonial.quote}"</p>
            <div>
              <div class="font-semibold text-white">{testimonial.author}</div>
              <div class="text-sm text-purple-400">{testimonial.role}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-purple-900/20 to-indigo-900/20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Transform Your Betting?</h2>
        <p class="text-gray-300 mb-10 text-xl">Join thousands of users who are already making smarter decisions with ScoreStack Predictor.</p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-gradient-to-r from-purple-600 to-purple-700 text-white font-semibold rounded-lg hover:from-purple-700 hover:to-purple-800 transition-all duration-300 transform hover:-translate-y-1 shadow-lg shadow-purple-500/20">
            Get Started Free
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-purple-500 text-purple-300 font-semibold rounded-lg hover:bg-purple-500/10 transition-all duration-300">
            Schedule a Demo
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes pulse-glow {
    0% { box-shadow: 0 0 0 0 rgba(124, 58, 237, 0.4); }
    70% { box-shadow: 0 0 0 10px rgba(124, 58, 237, 0); }
    100% { box-shadow: 0 0 0 0 rgba(124, 58, 237, 0); }
  }

  .pulse-glow {
    animation: pulse-glow 2s infinite;
  }

  .gradient-border {
    position: relative;
    border-radius: 12px;
  }

  .gradient-border::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #7c3aed, #a855f7, #c084fc, #d8b4fe);
    border-radius: 14px;
    z-index: -1;
    animation: gradient 15s ease infinite;
    background-size: 400% 400%;
  }

  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>