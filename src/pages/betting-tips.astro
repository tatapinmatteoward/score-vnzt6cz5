---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Expert Betting Tips: AI-Powered Strategies for Football Success";
const pageDescription = "Discover actionable betting tips from ScoreStack Predictor, leveraging cutting-edge AI to enhance your football wagering decisions and boost your chances of winning.";

const tips = [
  {
    id: 1,
    title: "Statistical Edge Analysis",
    description: "Leverage our AI-powered models to identify value bets beyond traditional statistics. Our algorithm detects subtle patterns in team performance that human analysts often miss."
  },
  {
    id: 2,
    title: "Weather Impact Predictions",
    description: "Our predictive models factor in weather conditions, player fitness, and environmental factors to provide accurate assessments of how external elements affect match outcomes."
  },
  {
    id: 3,
    title: "Injury Probabilities",
    description: "Real-time analysis of injury reports and player availability with our machine learning engine that predicts impact on team performance with 87% accuracy."
  },
  {
    id: 4,
    title: "Historical Match Trends",
    description: "Access deep historical data insights showing how teams perform in similar situations, considering head-to-head records, venue-specific performance, and seasonal variations."
  },
  {
    id: 5,
    title: "Live Odds Optimization",
    description: "Dynamic betting recommendations based on real-time market movements and our AI's proprietary model updates that adapt to changing game conditions."
  }
];

const features = [
  {
    icon: "fas fa-brain",
    title: "Machine Learning Algorithms",
    description: "Advanced neural networks processing millions of data points"
  },
  {
    icon: "fas fa-chart-line",
    title: "Real-time Analytics",
    description: "Instant updates as games unfold and markets shift"
  },
  {
    icon: "fas fa-shield-alt",
    title: "Risk Management",
    description: "Optimized betting strategies with built-in risk controls"
  },
  {
    icon: "fas fa-bolt",
    title: "Speed & Accuracy",
    description: "Millisecond processing with 92% prediction accuracy"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-purple-900/20 to-slate-900">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
      <div class="absolute top-1/3 right-1/4 w-72 h-72 bg-indigo-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
      <div class="absolute bottom-1/4 left-1/2 w-60 h-60 bg-pink-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-4 py-24 md:py-32">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1 mb-4 text-sm font-semibold text-purple-300 bg-purple-900/50 rounded-full border border-purple-700/50">
          <i class="fas fa-robot mr-2"></i>AI-Powered Insights
        </span>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Expert Betting Tips: 
          <span class="block bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-400">AI-Powered Strategies</span>
        </h1>
        <p class="text-xl text-slate-300 mb-8 max-w-2xl">
          Discover actionable betting tips from ScoreStack Predictor, leveraging cutting-edge AI to enhance your football wagering decisions and boost your chances of winning.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="px-8 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-medium rounded-lg hover:from-purple-700 hover:to-indigo-700 transition-all duration-300 transform hover:-translate-y-1 shadow-lg shadow-purple-500/20">
            Get Premium Tips
          </button>
          <button class="px-8 py-3 bg-transparent border-2 border-purple-500 text-purple-300 font-medium rounded-lg hover:bg-purple-500/10 transition-all duration-300">
            View Sample Predictions
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <section class="py-20 bg-slate-900/50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Why AI Changes the Betting Game
        </h2>
        <p class="text-xl text-slate-400 max-w-3xl mx-auto">
          Traditional betting relies on gut feelings and stats overload. At ScoreStack Predictor, our advanced algorithms analyze vast datasets to deliver precise, data-driven tips.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature) => (
          <div 
            class="group p-6 bg-slate-800/50 backdrop-blur-sm rounded-xl border border-slate-700/50 hover:border-purple-500/50 transition-all duration-300 hover:-translate-y-2"
          >
            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-500 to-indigo-500 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
              <i class={`${feature.icon} text-white text-xl`}></i>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">{feature.title}</h3>
            <p class="text-slate-400">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Tips Section -->
  <section class="py-20 bg-slate-900/30">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Top 5 Betting Tips for Football Fans
        </h2>
        <p class="text-xl text-slate-400 max-w-3xl mx-auto">
          Battle-tested strategies infused with AI insights to elevate your betting game.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {tips.map((tip, index) => (
          <div 
            key={tip.id}
            class="group relative p-8 bg-gradient-to-br from-slate-800/40 to-slate-900/40 backdrop-blur-sm rounded-xl border border-slate-700/50 hover:border-purple-500/50 transition-all duration-300 overflow-hidden"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-purple-900/10 to-indigo-900/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="relative z-10">
              <div class="flex items-start">
                <div class="mr-4 mt-1">
                  <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-600 to-indigo-600 flex items-center justify-center text-white font-bold">
                    {index + 1}
                  </div>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-white mb-3 group-hover:text-purple-300 transition-colors duration-300">
                    {tip.title}
                  </h3>
                  <p class="text-slate-300 leading-relaxed">
                    {tip.description}
                  </p>
                </div>
              </div>
            </div>
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-purple-500 to-indigo-500 scale-x-0 group-hover:scale-x-100 origin-left transition-transform duration-500"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 relative overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-pulse animation-delay-2000"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Ready to Transform Your Betting Strategy?
        </h2>
        <p class="text-xl text-slate-300 mb-10">
          Join thousands of successful bettors who rely on our AI-powered insights every week.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-bold rounded-lg hover:from-purple-700 hover:to-indigo-700 transition-all duration-300 transform hover:scale-105 shadow-lg shadow-purple-500/30">
            Subscribe to Premium Tips
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-purple-500 text-purple-300 font-bold rounded-lg hover:bg-purple-500/10 transition-all duration-300">
            Free Trial Access
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 15s infinite linear;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .gradient-text {
    background: linear-gradient(to right, #8b5cf6, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>