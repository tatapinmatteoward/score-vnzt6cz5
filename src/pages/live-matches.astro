---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Live Matches - Real-Time AI Predictions on ScoreStack";
const pageDescription = "Experience the thrill of ongoing football matches with ScoreStack Predictor's cutting-edge AI analysis. Get instant predictions, odds updates, and betting insights to elevate your live wagering strategy in a futuristic interface.";

const featuredMatches = [
  {
    id: 1,
    league: "Premier League",
    homeTeam: "Manchester City",
    awayTeam: "Arsenal",
    homeScore: 2,
    awayScore: 1,
    status: "HT",
    time: "45'",
    prediction: "City to win",
    confidence: 78,
    odds: "2.10"
  },
  {
    id: 2,
    league: "La Liga",
    homeTeam: "Barcelona",
    awayTeam: "Real Madrid",
    homeScore: 1,
    awayScore: 0,
    status: "FT",
    time: "90+2'",
    prediction: "Draw",
    confidence: 65,
    odds: "3.20"
  },
  {
    id: 3,
    league: "Bundesliga",
    homeTeam: "Bayern Munich",
    awayTeam: "Borussia Dortmund",
    homeScore: 3,
    awayScore: 2,
    status: "LIVE",
    time: "72'",
    prediction: "Dortmund to win",
    confidence: 42,
    odds: "2.80"
  },
  {
    id: 4,
    league: "Serie A",
    homeTeam: "Juventus",
    awayTeam: "Inter Milan",
    homeScore: 0,
    awayScore: 0,
    status: "LIVE",
    time: "34'",
    prediction: "Juventus to win",
    confidence: 58,
    odds: "1.95"
  }
];

const stats = [
  { label: "Active Predictions", value: "1,248", icon: "fa-chart-line" },
  { label: "Accuracy Rate", value: "83.7%", icon: "fa-percentage" },
  { label: "Live Matches", value: "24", icon: "fa-tachometer-alt" },
  { label: "Avg. Confidence", value: "72%", icon: "fa-brain" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-950 text-white">
    {/* Hero Section */}
    <div class="relative overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-900/20 via-transparent to-transparent"></div>
      </div>
      
      <div class="container mx-auto px-4 py-20 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <div class="inline-flex items-center px-4 py-2 bg-purple-900/30 rounded-full border border-purple-500/30 mb-6">
            <span class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></span>
            <span class="text-sm font-medium">LIVE NOW</span>
          </div>
          
          <h1 class="text-4xl md:text-6xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-purple-200 mb-6">
            Live Matches
          </h1>
          
          <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
            Experience the thrill of ongoing football matches with ScoreStack Predictor's cutting-edge AI analysis. Get instant predictions, odds updates, and betting insights.
          </p>
          
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <button class="px-8 py-3 bg-gradient-to-r from-purple-600 to-indigo-700 rounded-lg font-semibold hover:from-purple-700 hover:to-indigo-800 transition-all duration-300 shadow-lg shadow-purple-500/20 hover:shadow-purple-500/40 transform hover:-translate-y-0.5">
              View All Live Games
            </button>
            <button class="px-8 py-3 bg-transparent border border-purple-500/30 rounded-lg font-semibold hover:bg-purple-500/10 transition-all duration-300 backdrop-blur-sm">
              <i class="fas fa-sync-alt mr-2"></i> Refresh Data
            </button>
          </div>
        </div>
      </div>
    </div>

    {/* Stats Section */}
    <div class="container mx-auto px-4 py-12">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {stats.map((stat, index) => (
          <div key={index} class="bg-gray-800/40 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-purple-500/50 transition-all duration-300 group">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-400 text-sm font-medium">{stat.label}</p>
                <p class="text-2xl font-bold mt-1">{stat.value}</p>
              </div>
              <i class={`text-2xl ${stat.icon} text-purple-400 group-hover:text-purple-300 transition-colors`}></i>
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* Featured Matches */}
    <div class="container mx-auto px-4 py-8">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold flex items-center">
          <i class="fas fa-bolt mr-3 text-yellow-400"></i> Featured Live Matches
        </h2>
        <div class="flex space-x-2">
          <button class="px-4 py-2 bg-gray-800/40 hover:bg-gray-700/50 rounded-lg text-sm font-medium transition-colors">
            All Leagues
          </button>
          <button class="px-4 py-2 bg-gray-800/40 hover:bg-gray-700/50 rounded-lg text-sm font-medium transition-colors">
            Most Popular
          </button>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {featuredMatches.map((match) => (
          <div key={match.id} class="bg-gradient-to-br from-gray-800/60 to-gray-900/40 backdrop-blur-sm rounded-2xl border border-gray-700/50 overflow-hidden hover:border-purple-500/50 transition-all duration-300 group">
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <div class="flex items-center">
                  <span class="text-xs bg-purple-900/50 text-purple-300 px-2 py-1 rounded">{match.league}</span>
                  <span class="ml-3 text-xs bg-red-900/50 text-red-300 px-2 py-1 rounded">{match.status}</span>
                </div>
                <div class="text-right">
                  <div class="text-sm font-medium text-gray-400">{match.time}</div>
                </div>
              </div>

              <div class="flex justify-between items-center mb-6">
                <div class="text-center">
                  <div class="font-semibold">{match.homeTeam}</div>
                  <div class="text-3xl font-bold mt-1">{match.homeScore}</div>
                </div>
                
                <div class="text-center">
                  <div class="text-xs text-gray-400">VS</div>
                  <div class="text-xs text-gray-500 mt-1">
                    {match.status === "LIVE" ? (
                      <span class="flex items-center justify-center">
                        <span class="w-2 h-2 bg-red-500 rounded-full mr-2 animate-pulse"></span> LIVE
                      </span>
                    ) : (
                      "FULL TIME"
                    )}
                  </div>
                </div>
                
                <div class="text-center">
                  <div class="font-semibold">{match.awayTeam}</div>
                  <div class="text-3xl font-bold mt-1">{match.awayScore}</div>
                </div>
              </div>

              <div class="flex flex-col md:flex-row justify-between items-center gap-4 pt-4 border-t border-gray-700/50">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-green-400 rounded-full mr-2 animate-pulse"></div>
                  <span class="text-sm font-medium">AI Prediction:</span>
                  <span class="ml-2 text-sm font-bold text-purple-400">{match.prediction}</span>
                </div>
                
                <div class="flex items-center space-x-3">
                  <div class="text-right">
                    <div class="text-xs text-gray-400">Confidence</div>
                    <div class="text-sm font-bold">{match.confidence}%</div>
                  </div>
                  <div class="px-3 py-1 bg-gradient-to-r from-purple-600/30 to-indigo-600/30 rounded-lg border border-purple-500/30">
                    <span class="font-bold">{match.odds}</span>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="px-6 py-3 bg-gradient-to-r from-gray-900/50 to-gray-800/50 border-t border-gray-700/30 flex justify-between items-center">
              <div class="flex space-x-2">
                <button class="text-xs px-3 py-1 bg-gray-700/50 hover:bg-gray-600/50 rounded-lg transition-colors">
                  Match Stats
                </button>
                <button class="text-xs px-3 py-1 bg-gray-700/50 hover:bg-gray-600/50 rounded-lg transition-colors">
                  Analysis
                </button>
              </div>
              <button class="text-xs px-3 py-1 bg-purple-600/20 hover:bg-purple-600/30 rounded-lg border border-purple-500/30 transition-colors">
                Place Bet
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* Prediction Insights */}
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-2 text-center">AI-Powered Insight Engine</h2>
        <p class="text-gray-400 text-center mb-12">Advanced algorithms analyzing real-time data for precision forecasts</p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-gradient-to-br from-gray-800/40 to-gray-900/30 p-6 rounded-2xl border border-gray-700/50 hover:border-purple-500/50 transition-all duration-300">
            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600/20 to-indigo-600/20 flex items-center justify-center mb-4">
              <i class="fas fa-brain text-purple-400 text-xl"></i>
            </div>
            <h3 class="text-xl font-bold mb-2">Predictive Modeling</h3>
            <p class="text-gray-400">Our neural networks analyze player performance, historical data, and match conditions.</p>
          </div>
          
          <div class="bg-gradient-to-br from-gray-800/40 to-gray-900/30 p-6 rounded-2xl border border-gray-700/50 hover:border-purple-500/50 transition-all duration-300">
            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600/20 to-indigo-600/20 flex items-center justify-center mb-4">
              <i class="fas fa-bolt text-purple-400 text-xl"></i>
            </div>
            <h3 class="text-xl font-bold mb-2">Real-time Processing</h3>
            <p class="text-gray-400">Instant adjustments as goals are scored, players change, and game dynamics shift.</p>
          </div>
          
          <div class="bg-gradient-to-br from-gray-800/40 to-gray-900/30 p-6 rounded-2xl border border-gray-700/50 hover:border-purple-500/50 transition-all duration-300">
            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600/20 to-indigo-600/20 flex items-center justify-center mb-4">
              <i class="fas fa-chart-line text-purple-400 text-xl"></i>
            </div>
            <h3 class="text-xl font-bold mb-2">Betting Optimization</h3>
            <p class="text-gray-400">Strategic recommendations based on risk assessment and probability analysis.</p>
          </div>
        </div>
      </div>
    </div>

    {/* Call to Action */}
    <div class="py-16 bg-gradient-to-r from-purple-900/20 to-indigo-900/20 border-y border-gray-800/50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Supercharge Your Betting?</h2>
        <p class="text-gray-300 max-w-2xl mx-auto mb-8">Join thousands of bettors who trust ScoreStack Predictor for their live match decisions.</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-3 bg-gradient-to-r from-purple-600 to-indigo-700 rounded-lg font-semibold hover:from-purple-700 hover:to-indigo-800 transition-all duration-300 shadow-lg shadow-purple-500/20 hover:shadow-purple-500/40 transform hover:-translate-y-0.5">
            Start Your Free Trial
          </button>
          <button class="px-8 py-3 bg-transparent border border-purple-500/30 rounded-lg font-semibold hover:bg-purple-500/10 transition-all duration-300 backdrop-blur-sm">
            View Pricing Plans
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes pulse-glow {
    0% { box-shadow: 0 0 0 0 rgba(124, 58, 237, 0.4); }
    70% { box-shadow: 0 0 0 10px rgba(124, 58, 237, 0); }
    100% { box-shadow: 0 0 0 0 rgba(124, 58, 237, 0); }
  }
  
  .pulse-glow {
    animation: pulse-glow 2s infinite;
  }
</style>